@import vars
@import basic

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 10px

.lddq
  font-size: 16px
  .head
    border-bottom: 2px solid #eee
    margin-bottom: 20px
    padding-bottom: 5px
    .title
      padding-left: 0
  .media
    margin-bottom: 30px
  img.avatar
    background: #eee
    border-radius: 3px
    width: 48px
    height: 48px
    margin-right: 15px
  .media.indent img.avatar
    width: 36px
    height: 36px
    margin-right: 10px
  .comment
    img
      max-width: 80%
      max-height: 300px
    .title
      font-size: 0.9em
      color: #999
      .name, .reply, .time
        display: inline-block
        margin-right: 5px
      .name
        color: #39e
        font-size: 1.1em
        font-weight: bold
      .time
        &:before
          content: "\00b7  "
          display: inline
          opacity: 0.6
    .content
      font-weight: 200
      line-height: 1.4em
    .action .btn
      color: #777
      padding: 2px 4px 2px 0
      margin-right: 8px
      font-size: 0.8em
      span
        margin-left: 3px
  .recommend
    .head
      font-size: 0.9em
      color: #777
      b
        color: #444
    .content
      flexbox()
      flex-wrap(wrap)
      .media.comment
        width: 45%
        flex(1 1 auto)

.lddq
  width: 80%
  max-width: 1024px
  min-width: 320px
  margin: auto
